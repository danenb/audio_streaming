#!/bin/bash
_IP=$(hostname -I) || true
echo $_IP
if [ ! $_IP]
  then
  service hostapd stop
  service udhcpd stop
  cp /etc/network/interfaces.wifi /etc/network/interfaces
  ifdown wlan0
  sleep 1
  ifup wlan0
  sleep 5

  _IP2=$(hostname -I) || true
  echo $_IP2
  if [ ! $_IP2]
    then
    ifdown wlan0
    sleep 2
    cp /etc/network/interfaces.hotspot /etc/network/interfaces
    service hostapd restart &
	service udhcpd restart &
  fi
fi

exit 0